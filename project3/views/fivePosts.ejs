<html>
<head>
    <meta charset="UTF-8">
    <title>Posts</title>
</head>
<body> 
    <div><h1>Posts From User <%= username %> </h1></div>
    <%for (i = 0; i < posts.length; i++){%>
        Post Id: <%-posts[i].postid%>
        <%-posts[i].title%>
        <%-posts[i].body%>
        <%}%>
    <% if (next) { %>
    <a id="next_link" href="<%- username %>?start=<%- parseInt(posts[posts.length-1].postid) + 1 %>">Next</a>
    <% } %>

</body>
</html>

